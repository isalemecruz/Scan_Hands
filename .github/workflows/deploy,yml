name: Simple CD

on:
  push:
    branches:
      - main  # ou master, dependendo do seu branch principal

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout do código
        uses: actions/checkout@v3

      - name: Configurar PHP
        run: sudo apt-get install -y php-cli php-curl php-mbstring

      - name: Rodar script de deploy
        run: |
          echo "Deploying Scan_Hands..."
          php -r '
          echo "Simulando deploy para apresentação...\n";
          // aqui você poderia incluir scripts de teste ou copiar arquivos para pasta temporária
          '
